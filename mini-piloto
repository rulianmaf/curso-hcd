    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-resize textarea
            const autoResize = (el) => {
                el.style.height = 'auto';
                el.style.height = (el.scrollHeight) + 'px';
            };

            const setupTextareaAutoResize = (container) => {
                container.querySelectorAll('textarea').forEach(textarea => {
                    textarea.addEventListener('input', () => autoResize(textarea));
                    autoResize(textarea); // Initial resize
                });
            };
            
            setupTextareaAutoResize(document.getElementById('app'));
            
            // Popular tabelas
            const actionPlanTable = document.getElementById('action-plan-table');
            const learningPlanTable = document.getElementById('learning-plan-table');

            const initialActionRows = [
                { task: 'Ex: Criar o grupo de WhatsApp com os participantes.', responsible: 'Ex: Maria', deadline: 'Ex: 29/09', result: 'Ex: Grupo criado e mensagem de boas-vindas enviada.' },
                { task: 'Ex: Visitar os 3 restaurantes para confirmar a participa√ß√£o.', responsible: 'Ex: Jo√£o e Ana', deadline: 'Ex: 30/09', result: 'Ex: Donos dos restaurantes cientes e alinhados.' },
                { task: 'Ex: Gerir o grupo diariamente, publicando as ofertas.', responsible: 'Ex: Todo o grupo', deadline: 'Ex: 01/10 a 07/10', result: 'Ex: Pelo menos uma oferta publicada por dia.' },
                { task: '', responsible: '', deadline: '', result: '' },
                { task: '', responsible: '', deadline: '', result: '' }
            ];

            initialActionRows.forEach(rowData => {
                const row = actionPlanTable.insertRow();
                row.innerHTML = `
                    <td class="table-cell"><textarea class="table-textarea" placeholder="O que vamos fazer?">${rowData.task}</textarea></td>
                    <td class="table-cell"><textarea class="table-textarea" placeholder="Quem?">${rowData.responsible}</textarea></td>
                    <td class="table-cell"><textarea class="table-textarea" placeholder="Quando?">${rowData.deadline}</textarea></td>
                    <td class="table-cell"><textarea class="table-textarea" placeholder="O que esperamos?">${rowData.result}</textarea></td>
                `;
            });

            const initialLearningRows = [
                { metric: 'Ex: N√∫mero de vendas realizadas atrav√©s do grupo.', target: 'Ex: Pelo menos 10 vendas conclu√≠das.', measurement: 'Ex: Contagem de pedidos na planilha.' },
                { metric: 'Ex: % de restaurantes que pagaram a comiss√£o.', target: 'Ex: 100% dos restaurantes.', measurement: 'Ex: Coluna "Status de Pagamento" na planilha.' },
                { metric: 'Ex: N√≠vel de satisfa√ß√£o dos pescadores (1-5).', target: 'Ex: M√©dia acima de 4.', measurement: 'Ex: Pergunta direta no feedback.' },
                { metric: '', target: '', measurement: '' }
            ];

            initialLearningRows.forEach(rowData => {
                const row = learningPlanTable.insertRow();
                row.innerHTML = `
                    <td class="table-cell"><textarea class="table-textarea" placeholder="O que vamos medir?">${rowData.metric}</textarea></td>
                    <td class="table-cell"><textarea class="table-textarea" placeholder="Qual n√∫mero indica sucesso?">${rowData.target}</textarea></td>
                    <td class="table-cell"><textarea class="table-textarea" placeholder="Como?">${rowData.measurement}</textarea></td>
                `;
            });
            
            setupTextareaAutoResize(actionPlanTable);
            setupTextareaAutoResize(learningPlanTable);
        });
    </script>
